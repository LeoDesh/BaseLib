{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s | %(levelname)s: %(message)s",
            "datefmt": "%d.%m.%Y %H:%M:%S"
        },
        "verbose": {
            "format": "[%(asctime)s] %(levelname)s | [%(filename)s:%(lineno)s] %(message)s | %(funcName)s | %(module)s",
            "datefmt": "%d.%m.%Y %H:%M:%S"
        },
        "json": {
            "()": "base_lib.logger_setup.ownLogger.JSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "logger": "name",
                "module": "module",
                "function": "funcName",
                "line": "lineno",
                "thread_name": "threadName",
                "arguments": "args"
            }
        }
    },
    "handlers": {
        "stout": {
            "class": "logging.StreamHandler",
            "formatter": "verbose",
            "level": "WARNING"
        },
        "simple_file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "logs\\simple_log.log",
            "mode": "a"
        },
        "detail_file": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "verbose",
            "filename": "logs\\detail_log.log",
            "mode": "w"
        },
        "json_file": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "json",
            "filename": "logs\\logs.jsonl",
            "mode": "a"
        },
        "rotation_file":
        {
            "class":"logging.handlers.RotatingFileHandler",
            "level":"DEBUG",
            "formatter":"verbose",
            "filename":"logs\\rotation_log.log",
            "maxBytes":100000,
            "backupCount":3
        }
    },
    "loggers": {
        "app": {
            "handlers": [
                "stout",
                "simple_file",
                "detail_file"
            ],
            "level": "INFO"
        },
        "ord": {
            "handlers": [
                "stout",
                "json_file",
                "simple_file"
            ],
            "level": "INFO"
        }
    }
}